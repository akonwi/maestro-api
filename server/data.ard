use ard/async
use ard/duration
use ard/http
use ard/io
use ard/sqlite

use maestro/db
use maestro/predictions
use maestro/matches
use maestro/teams

fn sync(conn: sqlite::Database) {
  while {
    matches::sync(conn)
    predictions::find_good_odds(conn)
    async::sleep(duration::from_hours(2))
  }

  conn.close().expect("Failed to close database")
}
